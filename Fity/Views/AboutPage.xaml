<Page
    x:Class="Fity.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="using:Fity.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <StackPanel x:Name="LayoutRoot"
          Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          EntranceNavigationTransitionInfo.IsTargetElement="True"
          Padding="24,0">

        <c:PageHeader x:Name="pageHeader">
            <c:PageHeader.HeaderContent>
                <TextBlock x:Name="title" Style="{StaticResource PageTitleTextBlockStyle}" Text="About"/>
            </c:PageHeader.HeaderContent>
        </c:PageHeader>


        <StackPanel x:Name="ContentContainer" Margin="24,0,24,0">
            <TextBlock Style="{StaticResource BodyTextBlockStyle}">Git repository: <Hyperlink NavigateUri="https://github.com/jamesgo/fity">https://github.com/jamesgo/fity</Hyperlink></TextBlock>
        </StackPanel>
    </StackPanel>
</Page>
